{
  "name": "home-assistant-widget",
  "version": "3.3.0",
  "main": "main.js",
  "scripts": {
    "build:renderer": "vite build --mode production",
    "build:renderer:dev": "vite build --mode development",
    "start": "npm run build:renderer && electron .",
    "dev": "npm run build:renderer:dev && electron . --dev",
    "dist": "npm run build:renderer && electron-builder --win nsis portable",
    "dist:win": "npm run build:renderer && electron-builder --win nsis",
    "dist:mac": "npm run build:renderer && electron-builder --mac dmg zip",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "test": "jest"
  },
  "keywords": [
    "home-assistant",
    "widget",
    "desktop",
    "dashboard",
    "smart-home",
    "automation",
    "electron",
    "rainmeter",
    "iot",
    "home-automation"
  ],
  "author": "Robertg761",
  "license": "MIT",
  "description": "Modern desktop widget for Home Assistant with real-time updates and drag-and-drop customization",
  "repository": {
    "type": "git",
    "url": "https://github.com/Robertg761/HA-Desktop-Widget.git"
  },
  "homepage": "https://github.com/Robertg761/HA-Desktop-Widget",
  "bugs": {
    "url": "https://github.com/Robertg761/HA-Desktop-Widget/issues"
  },
  "build": {
    "productName": "HA Desktop Widget",
    "appId": "com.github.robertg761.hadesktopwidget",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "index.html",
      "main.js",
      "preload.js",
      "dist-renderer/**/*",
      "styles.css",
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "asar": true,
    "compression": "maximum",
    "publish": [
      {
        "provider": "github",
        "owner": "Robertg761",
        "repo": "HA-Desktop-Widget",
        "releaseType": "release"
      }
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "artifactName": "${productName}-${version}-win-${arch}-Setup.${ext}",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "Home Assistant Widget"
    },
    "portable": {
      "artifactName": "${productName}-${version}-win-${arch}-Portable.${ext}"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@eslint/js": "^9.13.0",
    "babel-jest": "^30.2.0",
    "concurrently": "^9.2.1",
    "electron": "^37.4.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.3.3",
    "vite": "^7.3.1",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "events": "^3.3.0",
    "hls.js": "^1.4.12",
    "sortablejs": "^1.15.6"
  },
  "optionalDependencies": {
    "uiohook-napi": "^1.5.4"
  }
}
